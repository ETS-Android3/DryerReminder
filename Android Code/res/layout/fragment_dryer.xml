<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    tools:context=".DryerFragment">

    <Button
        android:id="@+id/dryer_back_button"
        android:layout_width="177dp"
        android:layout_height="57dp"
        android:layout_marginBottom="64dp"
        android:text="Back"
        android:textColor="@color/black"
        android:backgroundTint="@color/buttonBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dryer_confirm_button"
        android:layout_width="182dp"
        android:layout_height="51dp"
        android:text="Confirm"
        android:textColor="@color/black"
        android:backgroundTint="@color/buttonBackground"
        app:layout_constraintBottom_toTopOf="@+id/dryer_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DryerView" />

    <TextView
        android:id="@+id/DryerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laundry is not done yet"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

