<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground"
    tools:context=".NotifyFragment">


    <Button
        android:id="@+id/notify_back_button"
        android:layout_width="223dp"
        android:layout_height="80dp"
        android:layout_marginBottom="68dp"
        android:text="Back"
        android:textColor="@color/black"
        android:backgroundTint="@color/buttonBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/notify_confirm_button"
        android:layout_width="221dp"
        android:layout_height="73dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/buttonBackground"
        android:text="Confirm"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/notify_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notifyView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/notifyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:text="Remind me every"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="349dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toTopOf="@+id/notify_confirm_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notifyView" />


</androidx.constraintlayout.widget.ConstraintLayout>

